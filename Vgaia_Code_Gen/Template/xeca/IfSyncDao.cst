public string getEntityName(SchemaExplorer.TableSchema table){
	string[] arr = table.Name.Split('_');
	
	string name = string.Empty;
	foreach( string str in arr ){
		name += str.Substring(0,1) + str.Remove(0,1).ToLower();
	}
		
	return name;
}

